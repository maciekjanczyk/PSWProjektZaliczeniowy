@model PSWProjektZaliczeniowy.ViewModel.NowaPodkategoriaVM

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="panel panel-group">
    <div class="panel-heading">
        <h3>Dodaj podkategorię</h3>
    </div>

    @using (Html.BeginForm())
    {
        <div>Nazwa:</div>
        @Html.TextBoxFor(k => k.Nazwa, new { Class = "form-control" });
        <br />
                
        <div class="form form-group">
            @Html.ListBoxFor(n => n.Kategoria, (IEnumerable<SelectListItem>)ViewData["Kategorie"], new { Class = "form-control" })
        </div>

        <div>
            @Html.ValidationMessage("KomunikatError")
        </div>

        <div>
            <input type="submit" value="Dodaj" class="btn btn-success" />
        </div>
    }
</div>
