@model IEnumerable<PSWProjektZaliczeniowy.Model.Ogloszenie>

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="panel panel-success">

    <div class="panel-heading">
        <h1>Wyniki wyszukiwania dla @ViewData["sekwencja"]:</h1>
    </div>

    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Tytuł</th>
                    <th>Cena</th>
                    <th>Zamiana</th>
                    <th>Miasto</th>
                    <th>Kategoria</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var ogl in Model)
                {
                    <tr onclick="location.href = '/Ogloszenia/Pokaz/@ogl.OgloszenieId'" style="cursor: pointer">
                        <td><img src="~/@ogl.Zdjecia" height="90"/></td>
                        <td>@ogl.Tytul</td>
                        <td>@ogl.Cena</td>
                        <td>@ogl.Zamiana</td>
                        <td>@ogl.Uzytkownik.Adres</td>
                        <td>@ogl.Podkategoria.Kategoria.Nazwa > @ogl.Podkategoria.Nazwa</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>