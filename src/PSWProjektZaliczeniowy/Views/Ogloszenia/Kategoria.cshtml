@model PSWProjektZaliczeniowy.Model.Podkategoria

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<br/>
<div class="panel panel-info">

    <div class="panel-heading">
        <h2>@Model.Kategoria.Nazwa > @Model.Nazwa</h2>
    </div>

    @if (Model.Ogloszenie != null)
    {
    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Tytuł</th>
                    <th>Cena</th>
                    <th>Zamiana</th>
                    <th>Miasto</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var ogl in Model.Ogloszenie)
                {
                    <tr onclick="location.href = '/Ogloszenia/Pokaz/@ogl.OgloszenieId'" style="cursor: pointer">
                        <td><img src="~/@ogl.Zdjecia" height="90" /></td>
                        <td>@ogl.Tytul</td>
                        <td>@ogl.Cena</td>
                        <td>@ogl.Zamiana</td>
                        <td>@ogl.Uzytkownik.Adres</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    }

</div>