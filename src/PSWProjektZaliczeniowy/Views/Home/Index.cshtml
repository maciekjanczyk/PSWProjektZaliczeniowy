@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Leniwiec - leniwe zakupy w szybkim tempie!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Wystawianie ogłoszeń jest banalnie proste - nawet leniwcowi by się chciało!
                </p>
            </div>
        </div>        
        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Nie masz konta?</h2>
        <ul>
            <li><a href="/User/Register">Załóż je teraz!</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Co daje Leniwiec?</h2>
        <ul>
            <li>Wyszukaj przedmiot po nazwie</li>
            <li>Przeglądaj przemioty po kategoriach</li>
            <li>Jesteś zainteresowany? Wyślij wiadomość do sprzedawcy!</li>
            <li>Ciągle się zastanawiasz? Dodaj przedmiot do listy obserwowanych!</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Czegoś ci brakuje?</h2>
        <ul>
            <li><a href="/Home/Contact">Skontaktuj się z naszym administratorem!</a></li>
        </ul>
    </div>   
</div>
