@model PSWProjektZaliczeniowy.ViewModel.MojeWiadomosciVM

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<br/>
<div class="panel panel-info">
    <div class="panel-heading">
        <h4>Odebrane:</h4>
    </div>

    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nadawca</th>
                    <th>Tytuł</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var wy in Model.Odebrane)
                {
                    <tr onclick="location.href = '/User/CzytajWiadomosc/@wy.Item1.WiadomoscId'" style="cursor: pointer">
                        @if (wy.Item1.Odczytana)
                        {
                            <td>@wy.Item2.Login</td>
                            <td>@wy.Item1.Tytul</td>
                            <td>@wy.Item1.Data</td>
                        }
                        else
                        {
                            <td><b>@wy.Item2.Login</b></td>
                            <td><b>@wy.Item1.Tytul</b></td>
                            <td><b>@wy.Item1.Data</b></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="panel panel-info">
    <div class="panel-heading">
        <h4>Wysłane:</h4>
    </div>

    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Odbiorca</th>
                    <th>Tytuł</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var wy in Model.Wyslane)
                {
                    <tr onclick="location.href = '/User/CzytajWiadomosc/@wy.Item1.WiadomoscId'" style="cursor: pointer">
                        <td>@wy.Item2.Login</td>
                        <td>@wy.Item1.Tytul</td>
                        <td>@wy.Item1.Data</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>